    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <DataGrid
      Margin="10,38,10,77"
      Grid.ColumnSpan="2" />
    <Label Content="Status:"
           HorizontalAlignment="Left"
           Margin="10,10,0,0"
           Grid.ColumnSpan="2" Height="26" VerticalAlignment="Top" />
